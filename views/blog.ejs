<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home Page</title>

</head>

<body>
    <%- include('./partials/nav') %>

        <!-- Blog Section -->
        <div class="container mt-3">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" width="700px">
            <pre class="mt-3"><%= blog.body %></pre>
            <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50px">
            <%= blog.createdBy.fullName %>
        </div>


        <!-- Comments Section -->
        <div class="container mt-3">
            <h3>Comments (<%= locals.comments.length %>)</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div>
                        <textarea class="form-control" placeholder="Leave a comment here" name="content"
                            style="height: 100px"></textarea>
                    </div>
                    <button class="btn btn-sm btn-primary m-3" type="submit">comment</button>
                </form>
                <% } %>
        </div>

        <% if (locals.comments) { %>
            <div class="container mt-3">
                <% comments.forEach(comment=> { %>
                    <img src="<%= comment.createdBy.profileImageUrl %>" alt="" width="50px">
                    <%= comment.createdBy.fullName %>
                    <pre><%= comment.content %></pre>
                    <% }) %>
            </div>
            <% } %>

                <%- include('./partials/scripts') %>
</body>

</html>